{
    "name": "book-reader",
    "displayName": "Book-Reader",
    "description": "vscode摸鱼阅读器",
    "keywords": [
        "book",
        "reader",
        "摸鱼",
        "小说"
    ],
    "version": "0.0.2",
    "publisher": "wangluo",
    "engines": {
        "vscode": "^1.67.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "images/logo.jpg",
    "activationEvents": [
        "*"
    ],
    "main": "./src/extension",
    "contributes": {
        "configuration": {
            "title": "Book-Reader",
            "type": "object",
            "properties": {
                "bookReader.currPageNumber": {
                    "type": "number",
                    "default": 1,
                    "description": "当前页数(支持跳转)"
                },
                "bookReader.pageSize": {
                    "type": "number",
                    "default": 50,
                    "description": "每页文字数量"
                },
                "bookReader.filePath": {
                    "type": "string",
                    "default": "",
                    "description": "本地书籍路径"
                }
            }
        },
        "keybindings": [
            {
                "command": "extension.prePage",
                "key": "[",
                "mac": "[",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.nextPage",
                "key": "]",
                "mac": "]",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.bossCode",
                "key": "ctrl+m",
                "mac": "cmd+m"
            }
        ]
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.67.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "14.x",
        "eslint": "^8.14.0",
        "glob": "^8.0.1",
        "mocha": "^9.2.2",
        "typescript": "^4.6.4",
        "@vscode/test-electron": "^2.1.3"
    },
    "license": "SEE LICENSE IN LICENSE.txt",
    "repository": {
		"type": "git",
		"url": "https://github.com/TianCai250/Book-Reader-VSCode"
	}
}