{
    "name": "book-reader",
    "displayName": "Book-Reader",
    "description": "vscode摸鱼阅读器",
    "keywords": [
        "book",
        "reader",
        "摸鱼",
        "小说"
    ],
    "version": "1.0.1",
    "publisher": "wangluo",
    "engines": {
        "vscode": "^1.67.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "images/logo.jpg",
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/index.js",
    "contributes": {
        "configuration": {
            "title": "Book-Reader",
            "type": "object",
            "properties": {
                "bookReader.currPageNumber": {
                    "type": "number",
                    "default": 1,
                    "description": "当前页数(支持跳转)"
                },
                "bookReader.pageSize": {
                    "type": "number",
                    "default": 50,
                    "description": "每页文字数量"
                },
                "bookReader.filePath": {
                    "type": "string",
                    "default": "",
                    "description": "本地书籍路径"
                },
                "bookReader.keyWords": {
                    "type": "string",
                    "default": "",
                    "description": "跳转关键词位置"
                }
            }
        },
        "keybindings": [
            {
                "command": "extension.prePage",
                "key": "[",
                "mac": "[",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.nextPage",
                "key": "]",
                "mac": "]",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.bossCode",
                "key": "ctrl+m",
                "mac": "cmd+m"
            }
        ]
    },
    "scripts": {
        "watch": "tsup --watch",
        "build": "tsup",
        "pack": "vsce package"
    },
    "devDependencies": {
        "@types/node": "14.x",
        "@types/vscode": "^1.67.0",
        "tsup": "^8.0.2",
        "typescript": "^4.6.4"
    },
    "license": "SEE LICENSE IN LICENSE.txt",
    "repository": {
        "type": "git",
        "url": "https://github.com/TianCai250/Book-Reader-VSCode"
    },
    "dependencies": {
        "chardet": "^2.0.0",
        "iconv-lite": "^0.6.3"
    }
}
